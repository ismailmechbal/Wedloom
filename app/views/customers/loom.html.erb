<center>

<h1>My Loom</h1>
<%= link_to 'Connect with a Wedloom planner', refine_path, :class => "btn btn-primary btn-large" %>
<hr>


  <div id="tileContainer">
        <% @elements.each do |element|  %>
          <div style="margin: 5px; width: 300px;">
            <span class="roll">
              <center>
                </br>
                <%= link_to "Remove", remove_element_path(:id => element.id), :class => "btn btn-primary btn-large" %>
                </br>
                </br>
                <%= link_to "More Info", element_path(:id => element.id), :class => "btn btn-primary btn-large" %>
              </center>
            </span>
            <!--<%= link_to image_tag(element.image), remove_element_path(:id => element), "data-toggle" => "tooltip", :class => "tooltip", :title => element.name + "</br>" + element.description %>-->
            <%= link_to image_tag(element.image), remove_element_path(:id => element) %>
          </div>
        <% end %>
  </div>

<%= link_to 'Get More Inspiration', inspiration_path, :class => "btn btn-primary btn-large" %>

<h2>Profile</h2>
<h4>
  <b>Name:</b>
  <%= @customer.name %>
</h4>
<h4>
  <b>Wedding Date:</b>
  <%= @customer.wedding_date %>
</h4>
<h4>
  <b>Budget:</b>
  $<%= number_with_delimiter(@customer.budget, :delimiter => ',') %>
</h4>
<h4>
  <b>Number of Guests:</b>
  <%= @customer.number_of_guests %>
</h4>

<%= link_to 'Edit Profile', edit_customer_path(@customer), :class => "btn btn-primary btn-large" %>

</br>
</br>
</center>
