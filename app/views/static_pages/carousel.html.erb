        <%= link_to("Add to Budget", user_path(user, "user[venue_price]" => venue.fixed_cost, "user[venue]" => venue.name), :class => "btn btn-large btn-primary", :method => :put ) %>
      </div>
    </div>
  </div>
<% end %>



