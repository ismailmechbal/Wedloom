  = link_to "Invitations", {:controller => "static_pages", :action => "inspiration", :category => "invitations"}, :class => "btn btn-primary"
  = link_to "Flowers", {:controller => "static_pages", :action => "inspiration", :category => "flowers"}, :class => "btn btn-primary"
