<hr size="10">
<center>


<h2>Your Estimated Wedding Cost: $
    <span id='estprice1'>
    <%= number_with_delimiter(((@venue.fixed_cost + @food.fixed_cost)*0.9).round(0), :delimiter => ',') %> 
    </span>
    - $
    <span id='estprice2'>
    <%= number_with_delimiter(((@venue.fixed_cost + @food.fixed_cost)*1.1).round(0), :delimiter => ',') %>    
    </span>
</h2>    
 
 


    <table >
        
        <tablebody>
            <div >

            <tr>
                <td><h3><%= @venue.name %>: <h3/></td>
                <td id="price"><h3>  $<%= number_with_delimiter(((@venue.fixed_cost)*0.9).round(0), :delimiter => ',') %> - $<%= number_with_delimiter(((@venue.fixed_cost)*1.1).round(0), :delimiter => ',') %></td>
            </tr>    
            <tr> 
                <td><h3>Table and Chair Rentals:</td>
                <td><h3>  $<%= number_with_delimiter(((@venue.fixed_cost)*0.1).round(0), :delimiter => ',') %> - $<%= number_with_delimiter(((@venue.fixed_cost)*0.2).round(0), :delimiter => ',') %></td>        
            </tr>    
             <tr>
                <td><h3><%= @food.name %>: <h3></td>
                <td><h3>  $<%= number_with_delimiter((@food.fixed_cost)*0.9.round(0), :delimiter => ',') %> - $<%= number_with_delimiter(((@food.fixed_cost)*1.2).round(0), :delimiter => ',') %> </h3></td>
            <tr>
                <td><h3>Tax and 15% Tip:</td>
