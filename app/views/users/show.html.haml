%table
    %thead
        %th{:colspan => "3"}
            %h1 
                Your Wedding Loom
    %tablebody
        %tr
            %td 
                = link_to image_tag("barn.jpg"), carousel_path(:category => "Venue")
            %td 
                = link_to image_tag("spudbar.jpg"), carousel_path(:category => "Food")
            %td 
                = link_to image_tag("Flowers.jpg"), carousel_path(:category => "Flowers")
        %tr
            %td 
                = link_to image_tag("dj.jpg"), carousel_path(:category => "Entertainment")
            %td 
                = link_to image_tag("photographer.jpg"), carousel_path(:category => "Photographer")
            %td 
                = link_to image_tag("wedding_dress.jpg"), carousel_path(:category => "Dress")
              
%hr{:size => "10"}
%center
    %h2 
        Your Estimated Wedding Cost: 
        %br/ 
        $
        %span#estprice1
            = number_with_delimiter(((@venue.fixed_cost + @food.fixed_cost)).round(0), :delimiter => ',')  
     
        %table
            %tablebody
                %div
                    %tr
                        %td
                            %h3
                                = @venue.name
                                \:
                        %td
                            %h3 
                                $
                                = number_with_delimiter((@venue.fixed_cost).round(0), :delimiter => ',') 
                    %tr 
                        %td
                            %h3 
                                Furniture Rentals:
                        %td
                            %h3 
                                $
                                = number_with_delimiter((@venue.fixed_cost).round(0), :delimiter => ',')       
                    %tr
                        %td
                            %h3 
                                = @food.name
                                \:
                        %td
                            %h3 
                                $
                                = number_with_delimiter((@food.fixed_cost).round(0), :delimiter => ',')
                    %tr
                        %td
                            %h3 
                                Gratuity/Tax:
                        %td
                            %h3 
                                $
                                = number_with_delimiter((@food.fixed_cost).round(0), :delimiter => ',')   

    %hr
    %p
        %label{:for => 'amount'}
            Number of Guests:
        %p#amount
            %strong
                50
        /%input{:type => 'text', :id => 'amount', :placeholder => '50', :style => "border: 0; text-align: center; color: #f6931f; font-weight: bold;"}
    #slider
    %svg
     
    %h3.budget
        Tips to help save:
        %p
            = @venue.name + "s typically charge higher prices for Saturday nights. Consider having your wedding reception on a Saturday afternoon" 
%hr{:size => "10"}
%p#notice
    = notice






